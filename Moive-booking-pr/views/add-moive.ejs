<%- include('header') %>

<section class="movie-new-form-section">
  <div class="movie-new-form-container">
    <h2>Create Movie Entry ðŸŽ¥</h2>

    <form class="movie-new-form" action="/create-movie" method="post" enctype="multipart/form-data">

      <div class="form-group">
        <label>Movie Name</label>
        <input type="text" name="moivename" placeholder="Eg. Interstellar" required />
      </div>

      <div class="form-group">
        <label>Director Name</label>
        <input type="text" name="dname" placeholder="Eg. Christopher Nolan" required />
      </div>

      <div class="form-group">
        <label>Main Language</label>
        <select name="language" required>
          <option value="">Select Language</option>
          <option value="english">English</option>
          <option value="hindi">Hindi</option>
          <option value="gujarati">gujarati</option>
         
        </select>
      </div>

      <div class="form-row">
        <div class="form-group">
          <label>Release Date</label>
          <input type="date" name="releasedate" required />
        </div>

        <div class="form-group">
          <label>Movie Length (Minutes)</label>
          <input type="number" name="moivelength" placeholder="150" required />
        </div>
      </div>

      <div class="form-group">
        <label>moive Image</label>
        <input type="file" name="moiveImage" required />
      </div>

      <div class="form-group">
        <label>Story Overview</label>
        <input type="text" name="overview" rows="4"
          placeholder="Brief storyline of the movie..." required></input>
      </div>

      <button type="submit">Save Movie</button>

    </form>
  </div>
</section>

<%- include('footer') %>
