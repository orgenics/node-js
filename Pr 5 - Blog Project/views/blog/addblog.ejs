<%- include('../header') %>

<style>
    /* Custom Styles for Modern UI */
    .form-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        background: #fff;
        overflow: hidden;
    }

    .form-header {
        background: #f8f9fa;
        padding: 20px 30px;
        border-bottom: 1px solid #eee;
    }

    .form-header h4 {
        margin: 0;
        font-weight: 700;
        color: #333;
    }

    .form-body {
        padding: 30px;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #e0e0e0;
        padding: 12px 15px;
        height: auto;
        font-size: 15px;
        background-color: #fcfcfc;
    }

    .form-control:focus {
        border-color: #7460ee;
        box-shadow: 0 0 0 3px rgba(116, 96, 238, 0.1);
        background-color: #fff;
    }

    .form-label {
        font-weight: 600;
        color: #555;
        margin-bottom: 8px;
        display: block;
    }

    /* Modern Radio Buttons as Pills */
    .category-selector {
        display: flex;
        gap: 10px;
    }

    .category-option {
        position: relative;
    }

    .category-option input {
        display: none;
    }

    .category-option label {
        display: inline-block;
        padding: 10px 20px;
        background-color: #f1f2f3;
        border-radius: 50px;
        cursor: pointer;
        transition: all 0.3s ease;
        font-weight: 500;
        margin: 0;
    }

    .category-option input:checked+label {
        background-color: #7460ee;
        color: white;
        box-shadow: 0 4px 10px rgba(116, 96, 238, 0.3);
    }

    /* Styled File Upload Area */
    .upload-box {
        border: 2px dashed #ddd;
        border-radius: 10px;
        padding: 20px;
        text-align: center;
        position: relative;
        background: #fafafa;
        transition: 0.3s;
    }

    .upload-box:hover {
        background: #fff;
        border-color: #7460ee;
    }

    .upload-box input[type="file"] {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        opacity: 0;
        cursor: pointer;
    }

    .upload-text {
        color: #888;
        font-size: 14px;
    }

    .btn-submit {
        background: linear-gradient(45deg, #7460ee, #5c4ac7);
        border: none;
        padding: 12px 40px;
        font-size: 16px;
        font-weight: 600;
        border-radius: 50px;
        box-shadow: 0 5px 15px rgba(116, 96, 238, 0.4);
        transition: transform 0.2s;
    }

    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(116, 96, 238, 0.5);
    }
</style>

<div class="page-wrapper" style="background-color: #edf1f5;">
    
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb" style="background: transparent;">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Add Blog</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                
                <form action="/blog/add-blog" method="post" enctype="multipart/form-data">
                    <div class="card form-card">
                        
                        <div class="form-header d-flex justify-content-between align-items-center">
                            <h4>Create New Post</h4>
                            <span class="text-muted small"><i class="fa fa-pen-nib"></i> Draft Mode</span>
                        </div>

                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-7 border-right">
                                    
                                    <div class="form-group mb-4">
                                        <label for="title" class="form-label">Blog Title</label>
                                        <input type="text" class="form-control" id="title" name="title" placeholder="Enter a catchy title..." required />
                                    </div>

                                    <div class="form-group mb-4">
                                        <label for="description" class="form-label">Description / Excerpt</label>
                                        <textarea class="form-control" id="description" name="description" rows="4" placeholder="Brief summary of the blog post..."></textarea>
                                    </div>

                                    <div class="form-group mb-4">
                                        <label class="form-label">Category</label>
                                        <div class="category-selector">
                                            <div class="category-option">
                                                <input type="radio" id="cat1" name="category" value="Technology" checked>
                                                <label for="cat1"><i class="mdi mdi-laptop"></i> Technology</label>
                                            </div>
                                            <div class="category-option">
                                                <input type="radio" id="cat2" name="category" value="education">
                                                <label for="cat2"><i class="mdi mdi-school"></i> Education</label>
                                            </div>
                                            <div class="category-option">
                                                <input type="radio" id="cat3" name="category" value="CareerGuidance">
                                                <label for="cat3"><i class="mdi mdi-compass"></i> Career</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label">Cover Image</label>
                                        <div class="upload-box">
                                            <input type="file" name="blogImage" id="blogImage" />
                                            <div class="upload-text">
                                                <i class="mdi mdi-cloud-upload" style="font-size: 24px;"></i><br>
                                                <span>Click or Drag file to upload Blog Cover</span>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                                <div class="col-md-5 pl-md-4">
                                    <h5 class="mb-4 text-muted">Author Details</h5>

                                    <div class="form-group mb-4">
                                        <label for="authorname" class="form-label">Author Name</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text bg-white border-right-0"><i class="mdi mdi-account"></i></span>
                                            </div>
                                            <input type="text" class="form-control border-left-0" id="authorname" name="authorname" placeholder="John Doe" />
                                        </div>
                                    </div>

                                    <div class="form-group mb-4">
                                        <label for="Publish Date" class="form-label">Publish Date</label>
                                        <input type="date" class="form-control" id="Publish Date" name="publishDate" />
                                    </div>

                                    <div class="form-group mb-4">
                                        <label class="form-label">Author Profile Photo</label>
                                        <div class="upload-box" style="padding: 15px;">
                                            <input type="file" name="authorImage" id="authorImage" />
                                            <div class="upload-text">
                                                <i class="mdi mdi-account-circle" style="font-size: 20px;"></i><br>
                                                <small>Upload Author Avatar</small>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="alert alert-info mt-4">
                                        <i class="mdi mdi-information"></i> Please ensure images are optimized before uploading.
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="card-footer bg-white border-top-0 text-center pb-4">
                            <button type="submit" class="btn btn-primary btn-submit">
                                <i class="mdi mdi-check"></i> Publish Blog
                            </button>
                        </div>

                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<%- include('../footer') %>