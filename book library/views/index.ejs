<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Bookverse</title>

<style>
@import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700;900&family=Inter:wght@300;400;600&display=swap');

:root{
  --bg:#06070c;
  --glass:rgba(255,255,255,0.08);
  --line:rgba(255,255,255,0.15);
  --gold:#f5c77a;
  --violet:#8b5cf6;
}

*{box-sizing:border-box;}

body{
  margin:0;
  background:radial-gradient(1200px 600px at 10% 10%, #1c0f2e, transparent 60%),
             radial-gradient(1000px 500px at 90% 20%, #0f2b3d, transparent 60%),
             var(--bg);
  color:#fff;
  font-family:'Inter',sans-serif;
  padding:80px 60px;
}

/* ---------- HERO ---------- */
.hero{
  max-width:1400px;
  margin:auto;
  display:grid;
  grid-template-columns:1fr 1fr;
  gap:60px;
  align-items:center;
}

.hero h1{
  font-family:'Playfair Display',serif;
  font-size:70px;
  font-weight:900;
  line-height:1.05;
  margin:0;
  background:linear-gradient(90deg,#fff,var(--gold));
  -webkit-background-clip:text;
  color:transparent;
}

.hero p{
  margin-top:20px;
  font-size:18px;
  opacity:.75;
  max-width:480px;
}

.divider{
  margin:70px auto;
  height:1px;
  background:linear-gradient(to right, transparent, var(--line), transparent);
}

/* ---------- ADD BOOK PANEL ---------- */
.panel{
  background:var(--glass);
  backdrop-filter:blur(26px);
  border:1px solid var(--line);
  border-radius:36px;
  padding:40px;
  box-shadow:0 60px 160px rgba(0,0,0,.7);
}

.panel h2{
  font-family:'Playfair Display';
  font-size:32px;
  margin-bottom:30px;
}

.group{
  margin-bottom:20px;
}

label{
  display:block;
  font-size:12px;
  letter-spacing:1.2px;
  opacity:.7;
  margin-bottom:8px;
}

input,select{
  width:100%;
  padding:16px 18px;
  border-radius:20px;
  background:rgba(255,255,255,.1);
  border:1px solid transparent;
  color:#fff;
  font-size:14px;
  outline:none;
}

input:focus,select:focus{
  border-color:var(--gold);
  box-shadow:0 0 0 4px rgba(245,199,122,.25);
}

.submit{
  width:100%;
  padding:18px;
  border-radius:26px;
  border:none;
  font-size:16px;
  font-weight:700;
  cursor:pointer;
  background:linear-gradient(135deg,var(--gold),#fff);
  color:#000;
  box-shadow:0 25px 60px rgba(245,199,122,.5);
}

/* ---------- BOOK GALLERY ---------- */
.gallery{
  max-width:1400px;
  margin:120px auto 0;
  display:grid;
  grid-template-columns:repeat(auto-fill,minmax(340px,1fr));
  gap:60px;
}

.book{
  position:relative;
  padding:26px;
  border-radius:42px;
  background:linear-gradient(180deg,rgba(255,255,255,.12),rgba(255,255,255,.02));
  backdrop-filter:blur(20px);
  border:1px solid var(--line);
  box-shadow:0 80px 180px rgba(0,0,0,.8);
  transition:.6s cubic-bezier(.16,1,.3,1);
}

.book:hover{
  transform:translateY(-20px) scale(1.05);
}

.book img{
  width:100%;
  height:320px;
  object-fit:cover;
  border-radius:30px;
  box-shadow:0 40px 120px rgba(0,0,0,.8);
}

.book h3{
  font-family:'Playfair Display';
  font-size:26px;
  margin:24px 0 6px;
}

.author{
  opacity:.7;
  font-size:14px;
}

.desc{
  font-size:14px;
  opacity:.65;
  margin:14px 0;
}

.meta{
  display:flex;
  justify-content:space-between;
  align-items:center;
  margin-top:18px;
}

.lang{
  padding:6px 16px;
  border-radius:999px;
  font-size:11px;
  background:rgba(255,255,255,.15);
}

.price{
  font-size:18px;
  font-weight:800;
  background:linear-gradient(90deg,#fff,var(--gold));
  -webkit-background-clip:text;
  color:transparent;
}

.actions{
  display:flex;
  gap:14px;
  margin-top:22px;
}

.actions button{
  flex:1;
  padding:14px;
  border-radius:18px;
  border:none;
  font-weight:800;
  cursor:pointer;
}

.edit{background:#22c55e;}
.delete{background:#ef4444;}

.empty{
  grid-column:1/-1;
  text-align:center;
  font-size:26px;
  opacity:.7;
}

/* ---------- RESPONSIVE ---------- */
@media(max-width:1000px){
  body{padding:40px 24px;}
  .hero{grid-template-columns:1fr;}
  .hero h1{font-size:52px;}
}
</style>
</head>

<body>

<!-- HERO -->
<div class="hero">
  <div>
    <h1>Bookverse</h1>
    <p>A cinematic digital museum for books.  
       Designed to feel exclusive, timeless, and powerful.</p>
  </div>

  <!-- ADD BOOK -->
  <div class="panel">
    <h2>Add a New Book</h2>
    <form action="/add-book" method="post">
      <div class="group"><label>TITLE</label><input name="Booktitle" required></div>
      <div class="group"><label>AUTHOR</label><input name="Authorname" required></div>
      <div class="group"><label>DESCRIPTION</label><input name="Desc" required></div>
      <div class="group"><label>IMAGE URL</label><input type="url" name="Image" required></div>
      <div class="group"><label>LANGUAGE</label>
        <select name="Language">
          <option>English</option>
          <option>Hindi</option>
          <option>Gujarati</option>
        </select>
      </div>
      <div class="group"><label>PRICE</label><input type="number" name="Price" required></div>
      <button class="submit">Add to Collection</button>
    </form>
  </div>
</div>

<div class="divider"></div>

<!-- BOOKS -->
<div class="gallery">
  <% if(books.length===0){ %>
    <div class="empty">No books in the collection</div>
  <% } else { %>
  <% books.forEach(book=>{ %>
    <div class="book">
      <img src="<%= book.Image %>">
      <h3><%= book.Booktitle %></h3>
      <div class="author">by <%= book.Authorname %></div>
      <div class="desc"><%= book.Desc %></div>
      <div class="meta">
        <span class="lang"><%= book.Language %></span>
        <span class="price">â‚¹ <%= book.Price %></span>
      </div>
      <div class="actions">
        <a href="/Editbook/<%= book.id %>"><button class="edit">Edit</button></a>
        <a href="/Deletebook/<%= book.id %>"><button class="delete">Delete</button></a>
      </div>
    </div>
  <% }) %>
  <% } %>
</div>

</body>
</html>
