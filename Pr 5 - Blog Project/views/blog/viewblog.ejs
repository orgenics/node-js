<%- include('../header') %>

    <style>
        .blog-card {
            border-radius: 18px;
            overflow: hidden;
            background: #fff;
            height: 100%;
            transition: box-shadow .2s ease;
        }

        .blog-card:hover {
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.12);
        }

        .blog-img {
            height: 230px;
            width: 100%;
            object-fit: cover;
        }

        .category-text {
            color: #6366f1;
            font-size: 13px;
            font-weight: 600;
        }

        .blog-title {
            font-size: 20px;
            font-weight: 700;
            line-height: 1.3;
        }

        .blog-desc {
            font-size: 14px;
            color: #6b7280;
        }

        .author-img {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            object-fit: cover;
        }
        .action-button{
            display: flex;
            gap: 5px;
        }
    </style>

    <div class="page-wrapper">

        
        <div class="page-breadcrumb mb-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h4 class="page-title">View All Blogs</h4>
                </div>

                <div class="col-md-6 text-md-end">
                    <input type="text" id="searchBlog" class="form-control d-inline-block w-75"
                        placeholder="Search by blog title">
                </div>
            </div>
        </div>

        
        <div class="container-fluid">
            <div class="row">

                <% blogs.forEach(blog=> { %>

                    
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 mb-4 blog-item"
                        data-title="<%= blog.title.toLowerCase() %>">

                        <div class="card blog-card border-0 h-100">

                            
                            <img src="<%= blog.blogImage %>" class="blog-img">

                            
                            <div class="card-body d-flex flex-column">


                                <div class="category-text mb-2">
                                    <%= blog.category %>
                                </div>


                                <h3 class="blog-title mb-2">
                                    <%= blog.title %>
                                </h3>


                                <p class="blog-desc flex-grow-1 mb-0">
                                    <%= blog.description.substring(0, 120) %>...
                                </p>

                                <div>
                                    <p>Publish Date : <%= new Date(blog.publishDate).toLocaleDateString('en-In',{
                                        day:'2-digit',
                                        month:'2-digit',
                                        year:'numeric'
                                    }) %> </p>
                                </div>
                                
                                <div class="d-flex align-items-center justify-content-between mt-1">

                                    
                                    <div class="d-flex align-items-center gap-2">
                                        <img src="<%= blog.authorImage %>" class="author-img">
                                        <span class="fw-semibold small m-2">
                                            <%= blog.authorname %>
                                        </span>
                                    </div>

                                    
                                    <div class="action-button">
                                        <a href="/blog/view-blog/<%= blog.id %>" class="btn btn-sm bg-primary text-white  rounded rounded-5">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        <a href="/blog/edit-blog/<%= blog.id %>" class="btn btn-sm bg-success text-white  rounded rounded-5">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        <a href="/blog/delete-blog/<%= blog.id %>" class="btn btn-sm bg-danger text-white  rounded rounded-5">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>

                    <% }) %>

            </div>
        </div>
    </div>

    
    <script>
        const searchInput = document.getElementById('searchBlog');
        const blogItems = document.querySelectorAll('.blog-item');

        searchInput.addEventListener('keyup', function () {
            const searchValue = this.value.toLowerCase().trim();

            blogItems.forEach(item => {
                const title = item.getAttribute('data-title');

                if (searchValue === "" || title.includes(searchValue)) {
                    item.style.display = "block";
                } else {
                    item.style.display = "none";
                }
            });
        });
    </script>

    <%- include('../footer') %>